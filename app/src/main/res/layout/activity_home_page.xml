<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">

    <ImageView
        android:id="@+id/pastaImage_1"
        android:layout_width="315dp"
        android:layout_height="223dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-40dp"
        android:layout_marginTop="17dp"
        android:onClick="showPopup"
        app:srcCompat="@drawable/clothing" />


    <ImageView
        android:id="@+id/pastaImage_2"
        android:layout_width="315dp"
        android:layout_height="209dp"
        android:layout_below="@id/pastaImage_1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-36dp"
        android:layout_marginTop="26dp"
        android:onClick="showPopup"
        android:textColor="@color/black"
        app:srcCompat="@drawable/books" />

    <Button
        android:id="@+id/button2"
        android:layout_width="125dp"
        android:layout_height="58dp"
        android:layout_below="@+id/btn_clothing"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="207dp"
        android:layout_marginEnd="22dp"
        android:backgroundTint="@color/white"
        android:text="Books"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/pastaImage_3"
        android:layout_width="211dp"
        android:layout_height="215dp"
        android:layout_below="@id/pastaImage_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="502dp"
        android:onClick="showPopup"
        app:srcCompat="@drawable/elec" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="181dp"
        android:layout_marginEnd="13dp"
        android:backgroundTint="@color/white"
        android:text="Electronics"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_clothing"
        android:layout_width="122dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/white"
        android:text="Clothing"
        android:textColor="@color/black" />
</RelativeLayout>