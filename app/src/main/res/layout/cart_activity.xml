<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:background="@drawable/img">


    <TextView
        android:id="@+id/textView19"
        android:layout_width="365dp"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="-38dp"
        android:layout_marginBottom="847dp"
        android:text="Yay! Order Placed."
        android:textColor="@color/teal"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="283dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="777dp"
        android:text="Cart Value:"
        android:textColor="@color/teal"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/cartvalue"
        android:layout_width="132dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="259dp"
        android:layout_marginBottom="795dp"
        android:textColor="@color/teal"
        android:textSize="20dp" />



    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="327dp"
        android:layout_marginBottom="851dp"
        app:srcCompat="@drawable/t" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="91dp"
        app:srcCompat="@drawable/p" />

    <TextView
        android:id="@+id/price2"
        android:layout_width="180dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="75dp"
        android:onClick="onClick"
        android:paddingTop="10dp"
        android:textColor="@color/teal"
        android:textSize="20dp" />

    <Button
        android:id="@+id/paynow"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="131dp"
        android:backgroundTint="@color/teal_700"
        android:text="PAY NOW!" />/>

</RelativeLayout>